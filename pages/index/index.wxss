page {
  height: 100%;
}
.box {
  width: 100%;
  height: 100%;
  background: #df5c67;
  position: fixed;
  top: 0;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.container {
  min-height: 100%;
  background: url('https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/activity/content-bg.png') no-repeat;
  background-size: cover;
  overflow: hidden;
}

/* ---------------- header信息 ----------------  */
.header view {
  position: absolute;
  top: 30rpx;
}
.head-logo {
  width: 230rpx;
  left: 30rpx;
}
.head-rule {
  right: 30rpx;
  height: 48rpx;
  padding: 0 18rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 46rpx;
  background: rgba(255, 255, 255, .2);
  border: solid 1px #fff;
  border-radius: 48rpx;
}

/* ----------------- 活动信息 -----------------  */
.content {
  padding: 50rpx 60rpx;
  margin: 820rpx 30rpx 0;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 0 6px 4px #fde9ae inset;
  position: relative;
}
.group-head {
  color: #555;
  font-size: 32rpx;
  line-height: 1;
}
.group-head text {
  color: #FE9524;
  font-size: 48rpx;
  line-height: 1;
}
.group-text {
  margin-top: 20rpx;
  width: 400rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
  position: relative;
}
.group-text::after {
  content: '';
  display: block;
  width: 100%;
  height: 1px;
  background: #ccc;
  position: absolute;
  top: 50%;
}
.group-text text {
  display: inline-block;
  padding: 0 16rpx;
  background: #fff;
  position: relative;
  z-index: 1;
}
.group-btn {
 width: 160rpx;
 height: 160rpx;
 position: absolute;
 top: 20rpx;
 right: 30rpx; 
 z-index: 1;
}
.share-btn {
  width: 100%;
  height: 100%;
  background: url('https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/activity/group-share.png') no-repeat;
  background-size: contain;
}
.share-btn::after {
  display: none;
}
.comp-head {
  color: #FE9524;
  font-size: 36rpx;
  text-align: center;
}
.comp-span {
  color: #555;
  font-size: 26rpx;
  line-height: 1;
  text-align: center;
  margin: 20rpx 0 16rpx;
}
.comp-span text {
  color: #FE9524;
  font-size: 36rpx;
  line-height: 1;
}

/* ---------------- 底部门店信息 ----------------  */
.activity-store {
  margin: 80rpx 30rpx 40rpx;
  padding: 30rpx 40rpx;
  border-radius: 20rpx;
  background: #cd3c57;
  position: relative;
}
.activity-head {
  width: 200rpx;
  padding: 20rpx 0;
  color: #fff;
  font-size: 34rpx;
  line-height: 1;
  text-align: center;
  border-radius: 20rpx;
  background: #cd3c57;
  position: absolute;
  top: 0; 
  left: 50%;
  margin-left: -100rpx;
  margin-top: -40rpx;
}
.activity-item {
  color: #ffc1cc;
  font-size: 26rpx;
  line-height: 1.4;
}
.activity-item:not(:last-child) {
  margin-bottom: 12rpx;
}



/* ---------------- 弹出层 ----------------  */
.modal-box {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  z-index: 9;
  transition: all .3s;
  opacity: 0;
  visibility: hidden;
  transform: scale(1.2);
}
.modal-box.show {
  opacity: 1;
  visibility: visible;
  transform: none;
}
.modal-close {
  width: 60rpx;
  position: absolute;
  top: 140rpx;
  right: 70rpx;
}
.modal-content {
  width: 660rpx;
  margin: 200rpx auto 0;
}
.modal-content.model-big {
  margin-top: 160rpx;
}


/* ---------------- 参加团 ----------------  */
.modal-form-content {
  width: 100%;
  padding: 0 110rpx 0 90rpx;
  position: absolute;
  top: 450rpx;
  left: 0;
}
.form-cell {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 25rpx;
}
.form-label {
  width: 120rpx;
  color: #333;
  font-size: 26rpx;
}
.form-control {
  flex: auto;
  position: relative;
}
.form-control-input {
  padding: 0 20rpx;
  height: 80rpx;
  background: rgba(249,249,249,1);
}
.form-control-input input,
.form-control-input .picker {
  height: 80rpx;
  color: #999;
  font-size: 28rpx;
  line-height: 80rpx;
}
.form-control .radio {
  color: #999;
  font-size: 28rpx;
  line-height: 80rpx;
  margin-right: 36rpx;
}
.form-control .radio::before {
  content: '';
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
  background:rgba(240,240,240,1);
  vertical-align: sub;
  border-radius: 50%;
}
.form-control .radio.active::before {
  background: #fff url('https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/activity/radio-checked.png') no-repeat;
  background-size: contain;
}
.get-tel {
  color: #00f;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 10px;
  position: absolute; 
  top: 0;
  right: -10rpx;
  z-index: 9;
}
.get-tel::after {
  display: none;
}
.form-tip {
  color: #999;
  font-size: 10px;
  text-align: center;
}
.form-submit {
  text-align: center;
  margin-top: 20rpx;
}
.form-submit button {
  width: 100%;
  display: inline-block;
  height: 90rpx;
  background: #fff url('https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/activity/group-submit.png') no-repeat center;
  background-size: contain;
}
.form-submit button::after {
  display: none;
}


/* ---------------- 团信息 ----------------  */
.modal-group-content {
  width: 100%;
  text-align: center;
  position: absolute;
  top: 560rpx;
  left: 0;
}
.group-content-head {
  color: #333;
  font-size: 42rpx;
  line-height: 1;
  margin-bottom: 34rpx;
}
.group-content-head text {
  color: #FF3B2C;
  font-size: 60rpx;
  line-height: 1;
}
.group-content-cell {
  color: #666;
  font-size: 26rpx;
  line-height: 1;
  margin-bottom: 20rpx;
}
.group-content-cell text {
  color: #FF3B2C;
  font-size: 30rpx;
  line-height: 1;
}
.group-content-btn {
  margin-top: 30rpx;
}
.group-content-btn button {
  display: inline-block;
  width: 260rpx;
  background: #fff;
}
.group-content-btn button::after {
  display: none;
}

/* ---------------- 距离太远 ----------------  */
.distance-head {
  color: #333;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 10rpx;
}
.distance-head text {
  display: block;
  line-height: 1.8;
}
.distance-tip {
  color: #333;
  font-size: 26rpx;
  text-align: center;
}
.distance-store {
  margin-top: 30rpx;
  padding: 16rpx 30rpx;
  color: #999;
  font-size: 20rpx;
  background: #f4f4f4;
  border-radius: 20rpx;
}
.distance-store text {
  display: block;
  line-height: 1.8;
}
.distance-btn, .group-content-btn {
  text-align: center;
}
.modal-rule-content.distance {
  top: 520rpx;
}



/* ---------------- 活动规则 ----------------  */
.modal-rule-content {
  width: 100%;
  padding: 0 110rpx 0 90rpx;
  position: absolute;
  top: 570rpx;
  left: 0;
}
.rule-content-head {
  color: #333;
  font-size: 30rpx;
  margin-bottom: 30rpx;
  line-height: 1;
  text-align: center;
  position: relative;
}
.rule-content-head::after,
.rule-content-head::before {
  content: '';
  display: block;
  width: 25rpx;
  height: 28rpx;
  position: absolute;
  top: 8rpx;
}
.rule-content-head::before {
  left: 50%;
  margin-left: -92rpx;
  background: url('https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/activity/modal-rule-head-lf.png') no-repeat;
  background-size: contain;
}
.rule-content-head::after {
  right: 50%;
  margin-right: -90rpx;
  background: url('https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/activity/modal-rule-head-rf.png') no-repeat;
  background-size: contain;
}
.rule-content-cell {
  color: #666;
  font-size: 22rpx;
  padding-left: 34rpx;
  position: relative;
}
.rule-content-cell::before {
  content: '';
  display: block;
  width: 20rpx;
  height: 20rpx;
  background: url('https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/activity/modal-rule-cell.png') no-repeat;
  background-size: contain;
  position: absolute;
  top: 4rpx;
  left: 0;
}
.rule-content-cell:not(:last-child) {
  margin-bottom: 20rpx;
}