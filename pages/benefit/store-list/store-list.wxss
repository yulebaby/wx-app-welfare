.clearfix::after{display: block;height: 0;clear: both;content: ''}
page>view{padding-bottom:98rpx;}
.store_count{color:#AAA;font-size:24rpx;background:#F5F5F5;padding:24rpx 0 24rpx 32rpx;}
.store_box{padding:0 30rpx 5rpx;}
.store_list{background:#fff;padding:30rpx 0;position:relative;border-bottom:1rpx solid #F0F0F0;}
.store_btn{width:50rpx;padding-top:15rpx;position:absolute;}
.store_msg{padding-left:50rpx;}
.selected{width:21rpx;height:21rpx;}
.noSelected{width:21rpx;height:21rpx;}
.store_text1{padding-bottom:20rpx;}
.store_name{float:left;color:#333;font-size:28rpx;}
.store_text1>.navigator{width:100rpx;height:50rpx;padding:10rpx 20rpx 20rpx;position:absolute;right:0;}
.open_map{float:right;width:13rpx;height:23rpx;}
.store_address{float:left;width:92%;color:#666;font-size:22rpx;}
.store_distance{float:right;color:#999;font-size:22rpx}
.exchange_box{width:100%;height:98rpx;background:#fff;border-top:1rpx solid #DDDDDD;position:fixed;bottom:0;}
.member_price,.nomember_price{float:left;color:#FD5576;font-size:30rpx;padding:34rpx 19rpx 35rpx 30rpx;}
.original_price{float:left;color:#FD5576;font-size:26rpx;padding:38rpx 19rpx 35rpx 30rpx;text-decoration:line-through;}
.all_btn{float:right;width:260rpx;height:98rpx;color:#fff;font-size:30rpx;background:#5597F5;border:none;border-radius:0;line-height:98rpx;}
